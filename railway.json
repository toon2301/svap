{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "rootDirectory": "backend",
      "startCommand": "gunicorn swaply.wsgi:application --bind 0.0.0.0:$PORT --workers=3",
      "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
      "env": {
        "DJANGO_SETTINGS_MODULE": "swaply.settings_production"
      },
      "ports": ["$PORT"]
    },
    {
      "name": "frontend",
      "rootDirectory": "frontend",
      "buildCommand": "npm install --no-optional --no-audit --no-fund && npm run build",
      "startCommand": "npm run start -p $PORT",
      "ports": ["$PORT"]
    }
  ]
}

